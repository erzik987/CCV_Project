@using System.Web.UI.WebControls
@model CCV_Project.Models.Shelf

@{
    ViewBag.Title = "NewShelf";
}

<h2>NewShelf</h2>
@Html.Partial("Other/StoreHouse_Rack")

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.EAN, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.EAN, new { @class = "form-control",@placeholder="Enter EAN here" })
                @Html.ValidationMessageFor(model => model.EAN, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Xposition, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Xposition, new { @class = "form-control",@placeholder="Enter X position" })
                @Html.ValidationMessageFor(model => model.Xposition, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Yposition, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Yposition, new { @class = "form-control",@placeholder="Enter Y position" })
                @Html.ValidationMessageFor(model => model.Yposition, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Activ, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Activ)
                    @Html.ValidationMessageFor(model => model.Activ, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-outline-success" />
                @Html.ActionLink("Back", "Index", new{iD=Session["RackID"]}, new { @class = "btn btn-outline-dark"})
            </div>
        </div>
    </div>
}
@Html.Partial("AlreadyExist")
